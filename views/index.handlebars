<h1>It's Burger Time!</h1>

<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>Burgers Ready to Eat!</h2>
      <div class="row">
        <div class="col-12">
          <div class="burgerTop img-fluid"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
      </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="burgerBottom img-fluid"></div>
        </div>
      </div>
    </div>
    <div class="col-4">

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        {{!-- <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Eaten!<br>
          <input type="radio" name="sleepy" value="0"> Eat Me!
        </div> --}}

        <button type="submit">Add burger</button>
      </form>
    </div>
    <div class="col-4">

      <h2>Burgers You Ate!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>